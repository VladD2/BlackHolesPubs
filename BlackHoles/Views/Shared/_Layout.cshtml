<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewBag.Title - My ASP.NET Application</title>
  @Styles.Render("~/Content/css")
  @Scripts.Render("~/bundles/modernizr")
  <script type="text/javascript" src="http://www.google.com/jsapi"></script>
  <script>
    var urlPrefix = '@Url.Content("~")';
  </script>
</head>
<body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li><a href='@Url.Action("Index", "Home")'     title="Начальной странице"                                    ><span class="glyphicon glyphicon-home"     aria-hidden="true"></span>&nbsp;Начальная страница</a></li>
          <li><a href='@Url.Action("Index", "Authors")'  title="Список авторов"                                        ><span class="glyphicon glyphicon-user"     aria-hidden="true"></span>&nbsp;Авторы</a></li>
          <li><a href='@Url.Action("Index", "Articles")' title="Список заявок на публикации статей"                    ><span class="glyphicon glyphicon-file"     aria-hidden="true"></span>&nbsp;Статьи</a></li>
          <li><a href='@Url.Action("Contact", "Home")'   title="Телефоны, адреса электронной почты и другая информация"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;Контакты</a></li>
        </ul>
        @Html.Partial("_LoginPartial")
      </div>
    </div>
  </div>
  <div class="container body-content">
    @RenderBody()
    <footer></footer>
  </div>

  @Scripts.Render("~/bundles/jquery")
  @Scripts.Render("~/bundles/bootstrap")
  @Scripts.Render("~/Scripts/rx.js")
  @Scripts.Render("~/Scripts/rx.jquery.js")
  @Scripts.Render("~/Scripts/YandexTranslate.js")
  @RenderSection("scripts", required: false)
  @RenderSection("ExtendJqueryRangeValidator", required: false)
</body>
</html>
